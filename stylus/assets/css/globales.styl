fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif
color-claro = #fff
color-primario = #333
color-secundario = #8841da

// mixins
contenedor()
	display: flex
	width: 95%
	margin: 0 auto
	padding: 30px 0
caja-sombra()
	background-color: color-claro
	box-shadow: 0 20px 33px 0px rgba(0,0,0,.35)

// Funciones
opacidad(color, cantidad)
	alpha(color, cantidad)

// Ciclos o loops
for header in 3 2 1
	h{header}
		font-size: 35px - (5% * header) 
		margin: 0

// Condicionales
titulos(fuente)
	if fuente == fuente1
		font-family: fuente1
	else
		font-family: fuente2
		font-weight: 600
		text-transform: uppercase

*
	box-sizing: border-box

body
	margin: 0
	color: color-primario
	titulos(fuente1)